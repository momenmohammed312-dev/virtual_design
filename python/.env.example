# Python Engine Configuration
# Copy this to .env and adjust as needed

# Python Settings
PYTHON_VERSION=3.10
PYTHON_PATH=/usr/bin/python3

# Processing Defaults
DEFAULT_DPI=300
DEFAULT_COLORS=4
DEFAULT_LPI=55
DEFAULT_MIN_STROKE=0.5

# Output Settings
OUTPUT_FORMAT=png,pdf
CREATE_ZIP=true
CREATE_README=true

# Performance
MAX_IMAGE_SIZE_MB=50
PROCESS_TIMEOUT_SECONDS=300

# Debug
DEBUG_MODE=false
VERBOSE_LOGGING=true
SAVE_INTERMEDIATE_STEPS=false

# Paths
TEMP_DIR=/tmp/silk_screen
OUTPUT_DIR=./output
MODELS_DIR=./models
